<div class="user_cart_page"><h1><%= @user.first_name %>'s Cart</h1>

<div class="cart_items"><% session[@user.id]["cart"].each do |item_id, quantity| %>
        <div><% item = Item.find_by_id(item_id) %></div>
        <div><% price = quantity * item.price %></div>
        <div><%= pluralize(quantity, item.name) %> $<%= price.round(2) %></div>
        <div><%= button_to "remove item", "/sessions/#{@user.id}/#{item_id}", method: :delete %></div>
    <% end %></div>
<%= button_to "place order", orders_path %></div>



