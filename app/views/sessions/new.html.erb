<h1>User Login</h1>
<%=form_for 'user' do |f| %>
    <%=f.label :Username %>
    <%=f.text_field :user_name, :value => flash[:user_name] %>
    <%=f.label :Password %>
    <%=f.text_field :password %>
    <%=f.submit "login" %>
<% end %>

<% if flash[:message] %>
    <p><%= flash[:message] %></p>
<% end %>
    


